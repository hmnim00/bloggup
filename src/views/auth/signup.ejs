<%- include ('../partials/header') %>

<section id="form">
  <%- include('../partials/sidebar'); %>

  <div class="form">
    <div class="auth-card">
      <div class="auth-card__header">
        <h2>Registro</h2>
      </div>
      <div class="auth-card__body">
        <form action="/auth/signup" method="POST">
          <div class="auth-card__input-group">
            <label for="fullname">Nombre</label>
            <input type="text" name="fullname" id="fullname" class="auth-card__input"
              value="<%=(typeof inputData != 'undefined') ? inputData.fullname:'' %>" autofocus>
            <p class="auth-card__error-msg">
              <%= (typeof errors!='undefined' && typeof errors.fullname!='undefined' ) ? errors.fullname.msg:'' %>
            </p>
          </div>
          <div class="auth-card__input-group">
            <label for="username">Usuario</label>
            <input type="text" name="username" id="username" class="auth-card__input"
              value="<%=(typeof inputData != 'undefined') ? inputData.username:'' %>">
            <p class="auth-card__error-msg">
              <%= (typeof errors!='undefined' && typeof errors.username!='undefined' ) ? errors.username.msg:'' %>
            </p>
          </div>
          <div class="auth-card__input-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" class="auth-card__input">
            <p class="auth-card__error-msg">
              <%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%>
            </p>
          </div>
          <div class="auth-card__input-group">
            <label for="confirm">Confirmar contraseña</label>
            <input type="password" name="confirm" id="confirm" class="auth-card__input">
            <p class="auth-card__error-msg">
              <%=(typeof errors!='undefined' && typeof errors.confirm!='undefined' )? errors.confirm.msg:''%>
            </p>
          </div>
          <button type="submit" class="general-button">Registrarse</button>
        </form>
      </div>
      <div class="auth-card__footer">
        <p>¿Ya tienes una cuenta? <a href="/auth/signin">Accede aquí</a>.</p>
      </div>
    </div>
  </div>
</section>

<%- include ('../partials/footer') %>