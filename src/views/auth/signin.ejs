<%- include ('../partials/header') %>

<section id="form">
  <%- include('../partials/sidebar'); %>

  <div class="form">
    <div class="auth-card">
      <div class="auth-card__header">
        <h2>Acceder</h2>
      </div>
      <div class="auth-card__body">
        <form action="/auth/signin" method="POST">
          <div class="auth-card__input-group">
            <% if (signinMessage) { %>
            <div class="auth-card__signin-msg">
              <p class="error-text">
                <%= signinMessage %>
              </p>
            </div>
            <% } %>
            <label for="username">Usuario</label>
            <input type="text" name="username" id="username" class="auth-card__input"
              value="<%=(typeof inputData != 'undefined') ? inputData.username:'' %>" autofocus>
            <p class="auth-card__error-msg">
              <%= (typeof errors!='undefined' && typeof errors.username!='undefined' ) ? errors.username.msg:''%>
            </p>
          </div>
          <div class="auth-card__input-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" class="auth-card__input">
            <p class="auth-card__error-msg">
              <%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%>
            </p>
          </div>
          <button type="submit" class="general-button">Acceder</button>
        </form>
      </div>
      <div class="auth-card__footer">
        <p>¿No tienes una cuenta? <a href="/auth/signup">Regístrate aquí</a>.</p>
      </div>
    </div>
  </div>
</section>
<%- include ('../partials/footer') %>